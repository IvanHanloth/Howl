{
  "name": "@howl/core",
  "version": "1.0.0",
  "description": "Core library for Howl file transfer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b && shx cp -r src/assets dist/",
    "dev": "tsc -b --watch",
    "clean": "rimraf dist *.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "bonjour-service": "^1.2.1",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^4.0.15",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "supertest": "^7.1.4",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "file-transfer",
    "p2p",
    "mdns",
    "webrtc"
  ],
  "author": "Howl Team",
  "license": "MIT"
}
